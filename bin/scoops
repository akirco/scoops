#!/usr/bin/env node
"use strict";

const { program } = require("commander");
const { version } = require("../package.json");
const { argv } = process;
const { search_local, search_remote } = require("../main");

//自定义帮助信息
program.version(version, "-v, --version", "output the current version");

program
  .option("-l,--local", "search apps from local buckets", true)
  .option("-r,--remote", "search apps from remote buckets");

program.addHelpText(
  "after",
  `
  Example:
    remote search: $ scoops <wechat> [-r/--remote] [count,default=20] \n
    local search: $ scoops <wechat> [-l/--local]
    `
);

program.parse(argv);

const options = program.opts();
const { local, remote } = options;

if (local && remote === undefined) {
  const app = argv.slice(2);
  search_local(app);
}
if (remote) {
  const app = argv.slice(2);
  search_remote(app);
}

//如果没参数直接打印帮助信息
if (!argv.slice(2).length) {
  program.help({ error: true });
}
